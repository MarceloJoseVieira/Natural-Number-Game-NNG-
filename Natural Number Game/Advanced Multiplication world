Level 1/4
intros f h g,
cases b with k,
rw mul_zero at g,
exact h(g),
rw mul_succ at g,
have g2 := add_left_eq_zero(g),
exact f(g2),

Level 2/4
cases b,
right, refl,
rw mul_succ at h,
have h2 := add_left_eq_zero(h),
left,
exact h2,

Level 3/4
split,
apply eq_zero_or_eq_zero_of_mul_eq_zero,
intro h,
cases h,
rw h,
rw zero_mul,
refl,
rw h,
rw mul_zero,
refl,

Level 4/4
induction c with d hd generalizing b,
intro h,
rw mul_zero at h,
rw mul_eq_zero_iff at h,
cases h with b,
exfalso,
exact ha(b),
exact h,
intro h,
cases b,
rw mul_zero at h,
symmetry at h,
rw mul_eq_zero_iff at h,
cases h with b,
exfalso, exact ha(b),
symmetry, exact h,
apply succ_eq_succ_of_eq,
rw mul_succ at h,
rw mul_succ at h,
rw add_right_cancel_iff at h,
have h1 := hd(b),
apply h1,
exact h,
